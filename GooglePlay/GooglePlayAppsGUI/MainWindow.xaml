<Window x:Class="GooglePlayAppsGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GooglePlayAppsGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1.5*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Label Content="Válasszon kategóriát!" Grid.Column="0" HorizontalContentAlignment="Left" VerticalAlignment="Center" />
        <ListBox x:Name="kategoriakLB" Grid.Column="0" Grid.Row="1" Grid.RowSpan="3" SelectionChanged="kategoriakLB_SelectionChanged"/>

        <Label Content="Válasszon alkalmazást!" Grid.Column="1" HorizontalContentAlignment="Left" VerticalAlignment="Center" />
        <ComboBox x:Name="alkalmazasokCB" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Width="450" />

    </Grid>
</Window>
